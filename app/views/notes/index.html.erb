<div class="container">
  <h1>My Notes</h1>

  <% if @notes.count > 0 %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="center">Name</th>
        <th class="center">Phone Number</th>
        <th class="center">Date</th>
        <th class="center">Time</th>
        <th class="center">Body</th>
        <th class="center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.name %></td>
          <td><%= note.phone_number %></td>
          <td><%= note.date %></td>
          <td><%= Time.parse(note.time).strftime('%H:%M:%S') %></td>
          <td><%= note.body %></td>
          <td> 
            <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "View", note %></li>
                <li><%= link_to "Edit", edit_note_path(note) %></li>
                <li><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }%></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button class="btn"><%= link_to "Download PDF", note_download_path(@notes, :format => "pdf") %></button>
  <br><br>
  <button class="btn"><%= link_to "Send Notes By Email", :controller => "notes", :action => "send_notes_mail" %></button>
  <br>
  <% else %>

  <h3> No notes to display. Get started by making your first note!</h3>
  <br>
  <% end %>
  <br>
  <button class="btn"><%= link_to 'New Note', new_note_path %></button>
</div>
